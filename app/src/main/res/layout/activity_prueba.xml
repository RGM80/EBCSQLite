<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityPrueba">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/tv_txt_prueba"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Actividad 2!"
            android:textColor="@color/purple_200"
            android:textSize="45sp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tv_txt_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Texto01"
            android:textSize="20sp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tv_txt_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Texto02"
            android:textSize="20sp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tv_txt_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Texto03"
            android:textSize="20sp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tv_txt_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Texto04"
            android:textSize="20sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>